    {
        "name": "world",
        "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/india/india-states.json",
        "format":
        {
            "type": "topojson",
            "feature": "IND_adm1"
        },
        "transform": [
        {
            "type": "lookup",
            "from": "table",
            "key": "ID",
            "fields": ["properties.ID_1"],
            "values": ["ID", "Value", "State"]
        }]
    },
    {
        "name": "graticule",
        "transform": [
        {
            "type": "graticule",
            "step": [15, 15]
        }]
    }],
    "scales": [
    {
        "domain":
        {
            "data": "world",
            "field": "Value"
        },
        "interpolate": "hcl",
        "name": "color",
        "range":
        {
            "scheme": "Oranges"
        },
        "type": "linear",
        "zero": false
    }],

    "marks": [
    {
        "type": "shape",
        "from":
        {
            "data": "graticule"
        },
        "encode":
        {
            "enter":
            {   
                "strokeDash":
                {
                    "value": 1
                },
                "strokeWidth":
                {
                    "value": 1
                },
                "stroke":
                {
                    "value": "#dddddd"
                },
                "strokeOpacity":
                {
                    "value": 1
                },
                "fill":
                {
                    "value": null
                }
            }
        },
        "transform": [
        {
            "type": "geoshape",
            "projection": "projection"
        }]
    },
    {
        "type": "shape",
        "from":
        {
            "data": "world"
        },
        "encode":
        {
            "update":
            {
                "tooltip":
                {
                    "signal": "{\"Name\": datum[\"State\"], \"Value\": format(datum[\"Value\"], \".1f\")}"
                },
                "strokeOpacity":
                {
                    "value": 1
                },
                "strokeWidth":
                {
                    "value": 1
                },
                "stroke":
                {
                    "value": "#bbbbbb"
                },
                "fill":
                {
                    "scale": "color",
                    "field": "Value"
                }
            },
            "hover":
            {
                "fill":
                {
                    "value": "red"
                },
                "strokeWidth":
                {
                    "value": 2
                },
                "stroke":
                {
                    "value": "#bbbbbb"
                }
            }
        },
        "transform": [
        {
            "type": "geoshape",
            "projection": "projection"
        }]
    }]
}